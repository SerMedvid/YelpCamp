<% include ./partials/header %>


<div class="container">
    <div class="row">
        <div class="col-xs-12">
             <h1 class="text-center">Sign Up</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <form class="clientForm" action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="username" name="username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="password" name="password">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="first name" name="firstName">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="last name" name="lastName">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" placeholder="johm@doe.com" name="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="avatar url" name="avatar">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="admin code" name="admincode">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-md btn-block" type="submit" value="Sign Up!">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
   
    
</div>

<% include ./partials/footer %>